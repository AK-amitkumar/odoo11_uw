<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sign_check_product_template_form_view" model="ir.ui.view">
            <field name="name">sign_check_product_template_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_sign_product"/>
                        <label for="is_sign_product"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>